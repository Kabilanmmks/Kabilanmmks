//洧똊洧똈洧또洧또 洧똉洧똝 洧똖洧똌洧똍洧똌洧똖洧똌洧똒洧똊洧똌...
#include<stdio.h>
void main()
{
    int n;
    printf("Enter no.");
    scanf("%d",&n);
    printf("Given number is:%d\n",n);
    inc(&n);
    printf("After incrementing %d\n",n);
}
void inc(int *n)
{
    *n=*n+1;
    printf("Increment is %d\n",*n);
}

********************************************

output

Enter no.7
Given number is:7
Increment is 8
After incrementing 7
*********************************************
//洧똊洧똈洧또洧또 洧똉洧똝 洧똚洧똈洧또洧똙洧똌...
#include<stdio.h>
void main()
{
    int n;
    printf("Enter no.");
    scanf("%d",&n);
    printf("Given number is:%d\n",n);
    inc(n);
    printf("After incrementing %d\n",n);
}
void inc(int n)
{
    n=n+1;
    printf("Increment is %d\n",n);
}

**********************************************

output

Enter no.7
Given number is:7
Increment is 8
After incrementing 7
***********************************************
//洧똙洧똗洧륋롗洧똎 洧똑洧똈洧똘洧똏.洧똏...
#include<stdio.h>
#include<math.h>
int main()
{
    int a,ans;
    printf("Enter the number : ");
    scanf("%d",&a);
    ans=pow(a,2);
    printf("The 2nd power of %d is %d",a,ans);
}

************************************

output

Enter the number : 10
The 2nd power of 10 is 100
*************************************************